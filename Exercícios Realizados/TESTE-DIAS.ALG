Algoritmo "teste-dias"


Var

   x : inteiro
   dia : caractere


Inicio

   leia(x)
   
   escolha(x)
   
   caso 1
        dia <- "Domingo"
   caso 2
        dia <- "Segunda"
   caso 3
        dia <- "Terça"
   outrocaso
            dia <- "Valor inválido"
   fimescolha
        
   escreva("Dia da semana = ", dia)



Fimalgoritmo